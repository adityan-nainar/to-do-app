<%-include("partials/header.ejs")  -%>

<h2> Personal To Do</h2>
<div class="container">
  <div class="taskList">
  <% if((locals.taskP.length) !== 0 ){  %>
      <% for(var i=0; i<taskP.length; i++){%>
      <div class="item">
      <input type="checkbox" >
      <p>   <%= taskP[i] %>  </p>
      </div>
    <% }}else{ %>
      <h3>Enter first task</h3>
    <% } %>
  
<form action="/submit" method="POST">
    <input type="text" name="taskName" placeholder="Enter a task" autocomplete="off">
    <input type="submit" value="OK">
  </form>
</div>
</div>

<%-include("partials/footer.ejs")  -%>